import os
import Utils
from build import CPPBuildContext

#override the default build context with our own
Utils.g_module.build_context = Utils.g_module.install_context = \
    Utils.g_module.clean_context = CPPBuildContext

MODULES = 'except str sys io mt plugin logging dbi re net net.ssl ' \
          'unique xml.lite linear.lite zip math.linear math.poly lang'


def set_options(opt):
    opt.sub_options(MODULES)

def configure(conf):
    conf.sub_config(MODULES)
    
def build(bld):
    bld.add_subdirs(MODULES)

def distclean(context):
    context.recurse(MODULES)
